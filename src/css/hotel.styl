.hotel{
  .hotel-container{
    margin-left: 10px;
    h3{
      font-size:22px;
      color: color-segundary;
      padding: 10px 0;
    }
  }
  .image{
    background-position: center center;
    background-size: cover;
    width: 100%;
    height: 245px; //height del contenedor
  }
  .stars{
    font-size: 22px;
    color: rgba(0,0,0,0.3);
    .star-filled{
      color: #e0c812;
    }
  }
  .amenities{
    margin: 30px 0 ;
    font-size: 40px;
    color: color-text + 80;
  }
  .details{
    padding: 15px 10px 15px 0;
    p{
      color: rgba(0,0,0,0.4);
      padding: 16px 5px;
    }
    .price-container{
      background: rgba(0,0,0,0.1);
      text-align: center;
      padding 40px 15px;
      .price{
        margin-bottom: 20px;
        color: color-complementary;
        font-weight: bold;
        b{
          display: inline-block;
          vertical-align: super;
        }
        h2{
          display: inline-block;
          font-size: 30px;
        }
      }
    }
  }
}
